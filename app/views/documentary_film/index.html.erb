<section class="container fluid mt-5">
<h2 class="text-center">DOCUMENTALES</h2>
<%= link_to "Agregar Nuevo Documental", "/nuevo_documental", class:"btn boton"%>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Sinopsis</th>
                <th>Director</th>
            </tr>
        </thead>
        <tbody>
            <% @documentaryFilms.each do |documentaryFilm| %>
            <tr>
                <td><%= documentaryFilm.name %></td>
                <td><%= documentaryFilm.synopsis %></td>
                <td><%= documentaryFilm.director %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
</section>